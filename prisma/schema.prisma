generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @default("") // กำหนดค่าเริ่มต้นเป็น string ว่าง
  password  String
  role      String   @default("user")
}


model Game {
  id       Int    @id @default(autoincrement())
  name     String
  price    Float
  imageUrl String
}

model CartItem {
  id     Int  @id @default(autoincrement())
  userId Int
  gameId Int
}


