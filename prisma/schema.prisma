datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// User roles to differentiate between admin and customer
enum UserRole {
  ADMIN
  CUSTOMER
}

// Game model to represent products in the Steam-like platform
model Game {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  imageUrl    String
  category    String
  developer   User     @relation(fields: [developerId], references: [id])
  developerId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  purchases   Purchase[]
}

// User model with extended authentication and role
model User {
  id           String    @id @default(cuid())
  email        String    @unique
  password     String
  role         UserRole  @default(CUSTOMER)
  name         String?
  games        Game[]
  purchases    Purchase[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

// Purchase model to track game purchases
model Purchase {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  game      Game     @relation(fields: [gameId], references: [id])
  gameId    String
  purchaseDate DateTime @default(now())
}